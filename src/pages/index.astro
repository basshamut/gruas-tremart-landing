---
import Layout from '../layouts/Layout.astro';
import { Image } from 'astro:assets';
import { Icon } from 'astro-icon/components';
import ServiceCard from '../components/ServiceCard.astro';
import TestimonialCard from '../components/TestimonialCard.astro';
import ContactForm from '../components/ContactForm.astro';
---

<Layout title="Grúas Tre-Mart C.A. - Asistencia en carretera 24/7">
    <main id="main-content">
        <!-- Hero Section -->
        <section class="relative py-20 md:py-32 overflow-hidden" aria-labelledby="hero-title">
            <div class="absolute inset-0 z-0">
                <Image
                    src="/grua_servicio_via.png"
                    alt="Servicio de grúas"
                    width={1920}
                    height={1080}
                    class="object-cover brightness-50 w-full h-full"
                />
            </div>
            <div class="container relative z-10 text-white px-4 sm:px-6 lg:px-8">
                <div class="max-w-2xl space-y-6 mx-auto text-center sm:text-left">
                    <h1 id="hero-title" class="text-4xl md:text-6xl font-bold tracking-tight">
                        Asistencia en carretera 24/7 cuando más lo necesitas
                    </h1>
                    <p class="text-lg md:text-xl text-gray-200">
                        Servicio profesional de grúas para todo tipo de vehículos terrestres. Rápidos, eficientes y
                        siempre disponibles.
                    </p>
                    <div class="flex flex-col sm:flex-row gap-4">
                        <a href="#servicios"
                           class="inline-flex h-12 items-center justify-center rounded-md bg-primary px-8 text-sm font-medium text-primary-foreground shadow transition-colors hover:bg-primary/90 focus-visible:outline-none focus-visible:ring-1 focus-visible:ring-ring disabled:pointer-events-none disabled:opacity-50">
                           Nuestros Servicios
                        </a>
                        <a href="#contacto"
                           class="inline-flex h-12 items-center justify-center rounded-md border border-white bg-background/10 px-8 text-sm font-medium text-white shadow-sm transition-colors hover:bg-background/20 focus-visible:outline-none focus-visible:ring-1 focus-visible:ring-ring disabled:pointer-events-none disabled:opacity-50">
                            Mas información
                        </a>
                    </div>
                    <div class="flex items-center gap-6 pt-4">
                        <div class="flex items-center gap-2">
                            <Icon name="lucide:clock" class="h-5 w-5 text-primary"/>
                            <span>Disponible 24/7</span>
                        </div>
                        <div class="flex items-center gap-2">
                            <Icon name="lucide:map-pin" class="h-5 w-5 text-primary"/>
                            <span>Cobertura Nacional</span>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Services Section -->
        <section id="servicios" class="py-16 md:py-24 bg-muted" aria-labelledby="services-title">
            <div class="container">
                <div class="text-center mb-12">
                    <h2 id="services-title" class="text-3xl md:text-4xl font-bold mb-4">Nuestros Servicios</h2>
                    <p class="text-muted-foreground max-w-2xl mx-auto">
                        Ofrecemos una amplia gama de servicios de asistencia para todo tipo de vehículos terrestres,
                        adaptándonos a sus necesidades específicas.
                    </p>
                </div>
                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 px-4 sm:px-6 lg:px-8">
                    <ServiceCard
                        icon="/favicon.svg"
                        title="Servicio de Grúa"
                        description="Transporte de vehículos averiados o accidentados a talleres o destinos específicos con total seguridad."
                    />
                    <ServiceCard
                        icon="lucide:wrench"
                        title="Asistencia en Carretera"
                        description="Reparaciones in situ para problemas mecánicos menores, ruedas trancadas, desmontaje de piezas, cambio de neumáticos y batería descargada."
                    />
                    <ServiceCard
                        icon="lucide:map-pin"
                        title="Amplia Cobertura"
                        description="Cobertura a nivel nacional con grúa y taxi en cada base de asistencia."
                    />
                    <ServiceCard
                        icon="lucide:shield"
                        title="Rescates y Maniobras"
                        description="Rescate de vehículos en zonas de difícil acceso, remolque de vehículos pesados y maniobras especiales."
                    />
                    <ServiceCard
                        icon="lucide:door-closed"
                        title="Hospedaje y Resguardo de Vehículos"
                        description="Hospedaje y resguardo de vehículos en nuestras instalaciones."
                    />
                    <ServiceCard
                        icon="lucide:hand-helping"
                        title="Acompañamiento vial "
                        description="Acompañamiento vial en caso de accidente o avería."
                    />
                </div>
            </div>
        </section>

        <!-- About Section -->
        <section id="nosotros" class="py-16 md:py-24" aria-labelledby="about-title">
            <div class="container px-4 sm:px-6 lg:px-8">
                <div class="grid md:grid-cols-2 gap-12 items-center">
                    <div>
                        <Image
                            src="/grua_servicio.png"
                            alt="Equipo de Grúas Tre-Mart C.A."
                            width={1200}
                            height={900}
                            class="rounded-lg shadow-lg object-cover w-full h-full"
                        />
                    </div>
                    <div class="space-y-6">
                        <div class="inline-block px-3 py-1 rounded-full bg-primary/10 text-primary text-sm font-medium">
                            Sobre Nosotros
                        </div>
                        <h2 id="about-title" class="text-3xl md:text-4xl font-bold">Más de 18 años de experiencia en
                            asistencia vial</h2>
                        <p class="text-muted-foreground">
                            En Grúas Tre-Mart C.A. nos dedicamos a proporcionar servicios de asistencia en carretera de la más
                            alta calidad.
                            Nuestro equipo de profesionales altamente capacitados está disponible las 24 horas del día,
                            los 7 días de la semana para ayudarle en cualquier emergencia vial.
                        </p>
                        <ul class="space-y-3">
                            <li class="flex items-start gap-2">
                                <Icon name="lucide:thumbs-up" class="h-5 w-5 text-primary mt-0.5"/>
                                <span>Personal cualificado y certificado</span>
                            </li>
                            <li class="flex items-start gap-2">
                                <Icon name="lucide:thumbs-up" class="h-5 w-5 text-primary mt-0.5"/>
                                <span>Flota de grúas y vehículos de asistencia</span>
                            </li>
                            <li class="flex items-start gap-2">
                                <Icon name="lucide:thumbs-up" class="h-5 w-5 text-primary mt-0.5"/>
                                <span>Tiempos de respuesta rápidos y eficientes</span>
                            </li>
                            <li class="flex items-start gap-2">
                                <Icon name="lucide:thumbs-up" class="h-5 w-5 text-primary mt-0.5"/>
                                <span>Amplia bases de asistencia</span>
                            </li>
                            <li class="flex flex-col items-start gap-2">
                                <div class="flex items-center gap-2">
                                    <Icon name="lucide:thumbs-up" class="h-5 w-5 text-primary"/>
                                    <span class="block">Equipamiento por base:</span>
                                </div>
                                <ul class="list-disc pl-7 space-y-2 w-full">
                                    <li>Grúa de plataforma liviana y pesada</li>
                                    <li>Grúa de gancho liviana y pesada</li>
                                    <li>Grúa de wheely liviana y pesada</li>
                                    <li>Taxi</li>
                                </ul>
                            </li>
                            <li class="flex flex-col items-start gap-2">
                                <div class="flex items-center gap-2">
                                    <Icon name="lucide:thumbs-up" class="h-5 w-5 text-primary"/>
                                    <span class="block">Capacidad de Atención:</span>
                                </div>
                                <ul class="list-disc pl-7 space-y-2 w-full">
                                    <li>Particular y pickup (Peso 1): hasta 2500kg</li>
                                    <li>Carga peso 2: 2501 hasta 5000 kg</li>
                                    <li>Carga peso 3: 5001 hasta 7500 kg</li>
                                    <li>Carga peso 4: más de 7501 kg</li>
                                </ul>
                            </li>

                            <li class="flex flex-col items-start gap-2">
                                <div class="flex items-center gap-2">
                                    <Icon name="lucide:thumbs-up" class="h-5 w-5 text-primary mt-0.5"/>
                                    <span class="block">Localidades:</span>
                                </div>

                                <ul class="list-disc pl-7 space-y-2 w-full">
                                    <li>Caracas: Tazón, La bandera, Cátia, El Cafetal</li>
                                    <li>La Guaira: Domo José María Vargas</li>
                                    <li>Charallave: FARMATODO de Charallave</li>
                                    <li>Pardillal</li>
                                    <li>Yaritagua</li>
                                    <li>Guárico</li>
                                    <li>La Victoria, Cagua Maracay</li>
                                    <li>Valencia</li>
                                    <li>San Carlos</li>
                                    <li>Barinas</li>
                                    <li>Mérida</li>
                                    <li>Maracaibo (antes del cruzar el puente)</li>
                                    <li>Barcelona</li>
                                    <li>Puerto La Cruz (Paseo Colón)</li>
                                </ul>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </section>

        <!-- Why Choose Us -->
        <section class="py-16 md:py-24 bg-muted">
            <div class="container">
                <div class="text-center mb-12">
                    <h2 class="text-3xl md:text-4xl font-bold mb-4">¿Por qué elegirnos?</h2>
                    <p class="text-muted-foreground max-w-2xl mx-auto">
                        Porque cumplimos con tiempos mínimos de llegada al origen de su vehículo, ya que su emergencia
                        es nuestra emergencia
                    </p>
                </div>
                <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6 px-4 sm:px-6 lg:px-8">
                    <div class="border-none shadow-md rounded-lg bg-white">
                        <div class="p-6 text-center space-y-4">
                            <div class="h-12 w-12 rounded-full bg-primary/10 flex items-center justify-center mx-auto">
                                <Icon name="lucide:clock" class="h-6 w-6 text-primary"/>
                            </div>
                            <h3 class="text-lg font-bold">Disponibilidad 24/7</h3>
                            <p class="text-muted-foreground">
                                Estamos disponibles todos los días del año, a cualquier hora.
                            </p>
                        </div>
                    </div>
                    <div class="border-none shadow-md rounded-lg bg-white">
                        <div class="p-6 text-center space-y-4">
                            <div class="h-12 w-12 rounded-full bg-primary/10 flex items-center justify-center mx-auto">
                                <Icon name="lucide:map-pin" class="h-6 w-6 text-primary"/>
                            </div>
                            <h3 class="text-lg font-bold">Amplia Cobertura</h3>
                            <p class="text-muted-foreground">
                                Servicio en todo el pais.
                            </p>
                        </div>
                    </div>
                    <div class="border-none shadow-md rounded-lg bg-white">
                        <div class="p-6 text-center space-y-4">
                            <div class="h-12 w-12 rounded-full bg-primary/10 flex items-center justify-center mx-auto">
                                <Icon name="lucide:shield" class="h-6 w-6 text-primary"/>
                            </div>
                            <h3 class="text-lg font-bold">Máxima Seguridad</h3>
                            <p class="text-muted-foreground">
                                Protocolos estrictos para garantizar su integridad física y la de su vehículo. Esas son
                                nuestras prioridades.
                            </p>
                        </div>
                    </div>
                    <div class="border-none shadow-md rounded-lg bg-white">
                        <div class="p-6 text-center space-y-4">
                            <div class="h-12 w-12 rounded-full bg-primary/10 flex items-center justify-center mx-auto">
                                <Icon name="lucide:thumbs-up" class="h-6 w-6 text-primary"/>
                            </div>
                            <h3 class="text-lg font-bold">Profesionalidad</h3>
                            <p class="text-muted-foreground">
                                Personal altamente cualificado y con amplia experiencia.
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Aliados Comerciales Section -->
        <section class="py-16 md:py-24" aria-labelledby="aliados-title">
            <div class="container px-4 sm:px-6 lg:px-8">
                <h2 id="aliados-title" class="text-3xl md:text-4xl font-bold mb-8 text-center">
                    Nuestros Aliados Comerciales
                </h2>
                <div class="grid grid-cols-2 md:grid-cols-4 gap-8">
                    <div class="flex flex-col items-center">
                        <Image
                            src="/logo_seguros_caracas_nuevo.png"
                            alt="Seguros Caracas"
                            width={200}
                            height={100}
                            class="rounded-lg shadow-lg object-cover max-w-[150px] sm:max-w-[120px] md:max-w-[150px] lg:max-w-[180px] h-auto"
                        />
                        <p class="mt-4 text-center text-xs">Seguros Caracas</p>
                    </div>
                    <div class="flex flex-col items-center">
                        <Image
                            src="/logo_el_gato_motor.png"
                            alt="Servicios Gato motor, c.a."
                            width={200}
                            height={100}
                            class="rounded-lg shadow-lg object-cover max-w-[150px] sm:max-w-[120px] md:max-w-[150px] lg:max-w-[180px] h-auto"
                        />
                        <p class="mt-4 text-center text-xs">Servicios Gato motor, c.a.</p>
                    </div>
                    <div class="flex flex-col items-center">
                        <Image
                            src="/vene_asistencia-logo_400x400.jpg"
                            alt="Servicios VENEASISTENCIA c.a"
                            width={200}
                            height={100}
                            class="rounded-lg shadow-lg object-cover max-w-[150px] sm:max-w-[120px] md:max-w-[150px] lg:max-w-[180px] h-auto"
                        />
                        <p class="mt-4 text-center text-xs">Servicios VENEASISTENCIA c.a</p>
                    </div>
                    <div class="flex flex-col items-center">
                        <Image
                            src="/mapfre_logo_1024x513-1-768x385.png"
                            alt="Mapfre Asistencia"
                            width={200}
                            height={100}
                            class="rounded-lg shadow-lg object-cover max-w-[150px] sm:max-w-[120px] md:max-w-[150px] lg:max-w-[180px] h-auto"
                        />
                        <p class="mt-4 text-center text-xs">Mapfre Asistencia CIA Inter de Seguros y Reaseguros, S.A</p>
                    </div>
                </div>
            </div>
        </section>

        <!-- Testimonials -->
        <section id="testimonios" class="py-16 md:py-24 bg-muted" aria-labelledby="testimonials-title">
            <div class="container">
                <div class="text-center mb-12">
                    <h2 id="testimonials-title" class="text-3xl md:text-4xl font-bold mb-4">Lo que dicen nuestros
                        clientes</h2>
                    <p class="text-muted-foreground max-w-2xl mx-auto">
                        La satisfacción de nuestros clientes es nuestra mejor carta de presentación.
                    </p>
                </div>
                <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6 px-4 sm:px-6 lg:px-8">
                    <TestimonialCard
                        name="María García"
                        location="Caracas"
                        testimonial="Excelente servicio. Tuve una avería en la autopista y en menos de 15 minutos ya estaban allí. Muy profesionales y amables."
                    />
                    <TestimonialCard
                        name="Juan López"
                        location="Los Teques"
                        testimonial="Tuve que llamarles un domingo por la noche y la respuesta fue inmediata. El conductor fue muy profesional y cuidadoso con mi vehículo."
                    />
                    <TestimonialCard
                        name="Ana Rodríguez"
                        location="Valencia"
                        testimonial="Servicio rápido y eficiente. Me solucionaron el problema en la carretera sin necesidad de remolcar el carro. Muy recomendable."
                    />
                </div>
            </div>
        </section>

        <!-- CTA Section -->
        <section id="contacto" class="py-16 md:py-24 bg-primary text-primary-foreground" aria-labelledby="contact-title">
            <div class="container px-4 sm:px-6 lg:px-8">
                <div class="grid md:grid-cols-2 gap-12 items-center">
                    <div class="space-y-6">
                        <h2 id="contact-title" class="text-3xl md:text-4xl font-bold">¿Necesita asistencia en carretera?</h2>
                        <p class="text-primary-foreground/90 text-lg">
                            No espere más. Contáctenos ahora y nuestro equipo de profesionales estará con usted en el
                            menor tiempo posible.
                        </p>
                        <div class="space-y-4">
                            <div class="flex items-center gap-3">
                                <Icon name="lucide:phone-call" class="h-5 w-5"/>
                                <span class="text-lg font-medium">+58 4241361672</span>
                            </div>
                            <div class="flex items-center gap-3">
                                <Icon name="lucide:phone-call" class="h-5 w-5"/>
                                <span class="text-lg font-medium">+58 4120163228</span>
                            </div>
                            <div class="flex items-center gap-3">
                                <Icon name="lucide:clock" class="h-5 w-5"/>
                                <span>Disponible 24/7, 365 días al año</span>
                            </div>
                        </div>
                        <div class="pt-4">
                            <a href="tel:+584241361672"
                               class="inline-flex h-10 items-center justify-center rounded-md bg-white px-8 text-sm font-medium text-primary shadow transition-colors hover:bg-white/90 focus-visible:outline-none focus-visible:ring-1 focus-visible:ring-ring disabled:pointer-events-none disabled:opacity-50">
                                Solicitar Asistencia
                            </a>
                        </div>
                    </div>
                    <div class="bg-white p-6 rounded-lg shadow-lg">
                        <h3 class="text-xl font-bold text-gray-900 mb-4">Solicite información</h3>
                        <ContactForm/>
                        <p id="form-response" class="mt-4 text-center text-sm font-medium"></p>
                    </div>
                </div>
            </div>
        </section>
    </main>
</Layout>
